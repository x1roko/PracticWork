@model TaskManagerMiac.Models.User

@{
    ViewData["Title"] = "Добавление пользователя";
}

<div class="col-md-6">
    <div class="card mb-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5 class="card-header">Добавление пользователя</h5>
            <div class="card-body demo-vertical-spacing  demo-only-element">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Firstname" class="control-label">Имя</label>
                    <input asp-for="Firstname" class="form-control" />
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label">Фамилия</label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label">Отчество</label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Snils" class="control-label">СНИЛС</label>
                    <input asp-for="Snils" class="form-control" />
                    <span asp-validation-for="Snils" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdGroup" class="control-label">Отдел</label>
                    <select asp-for="IdGroup" class="form-control" asp-items="ViewBag.IdGroup"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdRole" class="control-label">Роль</label>
                    <select asp-for="IdRole" class="form-control" asp-items="ViewBag.IdRole"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


<div class="mb-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Назад</a>
</div>

<script>
    document.getElementById("IdRole").selectedIndex = 2;
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


